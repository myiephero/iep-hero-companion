modules = ["python-3.12", "web", "postgresql-16", "bun", "nodejs-20"]

[nix]
channel = "stable-25_05"
packages = ["imagemagick", "librsvg", "nodejs"]

[deployment]
deploymentTarget = "autoscale"
run = ["npm", "start"]
build = ["npm", "run", "build"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "IEP Hero Production"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bun run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "IEP Hero Production"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bun run simple-production-server.js"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

