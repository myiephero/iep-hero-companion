<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- My IEP Hero Network Security Configuration -->
    
    <!-- Production domain configuration -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">myiephero.com</domain>
        <domain includeSubdomains="true">api.myiephero.com</domain>
        
        <!-- Certificate pinning for production -->
        <pin-set expiration="2026-01-01">
            <!-- Add your production SSL certificate pins here -->
            <pin digest="SHA-256">AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=</pin>
        </pin-set>
    </domain-config>
    
    <!-- Development and staging configuration -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>  <!-- Android emulator host -->
        <domain includeSubdomains="true">staging.myiephero.com</domain>
        <domain includeSubdomains="true">dev.myiephero.com</domain>
    </domain-config>
    
    <!-- Firebase and Google services -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">firebaseapp.com</domain>
        <domain includeSubdomains="true">googleapis.com</domain>
        <domain includeSubdomains="true">google.com</domain>
        <domain includeSubdomains="true">gstatic.com</domain>
        <domain includeSubdomains="true">firebase.google.com</domain>
    </domain-config>
    
    <!-- Educational content providers -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">education.gov</domain>
        <domain includeSubdomains="true">specialeducation.org</domain>
        
        <!-- Trust system CAs for educational domains -->
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </domain-config>
    
    <!-- Base configuration for HTTPS enforcement -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- Debug builds allow cleartext for development -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </debug-overrides>
</network-security-config>