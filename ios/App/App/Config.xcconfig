//
//  Config.xcconfig
//  My IEP Hero
//
//  Production configuration for TestFlight and App Store builds
//

// App Configuration
PRODUCT_BUNDLE_IDENTIFIER = com.myiephero.app
PRODUCT_NAME = My IEP Hero
DISPLAY_NAME = My IEP Hero

// Version Configuration for TestFlight
MARKETING_VERSION = 1.0.0
CURRENT_PROJECT_VERSION = 1

// iOS Deployment and Support
IPHONEOS_DEPLOYMENT_TARGET = 13.0
TARGETED_DEVICE_FAMILY = 1,2
SUPPORTS_MACCATALYST = NO

// Build Configuration
SWIFT_VERSION = 5.0
ENABLE_BITCODE = NO
SKIP_INSTALL = NO

// Code Signing Configuration
CODE_SIGN_STYLE = Manual
DEVELOPMENT_TEAM = $(DEVELOPMENT_TEAM)
CODE_SIGN_IDENTITY = iPhone Distribution
PROVISIONING_PROFILE_SPECIFIER = $(PROVISIONING_PROFILE_SPECIFIER)

// App Transport Security
NSAppTransportSecurity = {
    NSAllowsArbitraryLoads = NO;
    NSExceptionDomains = {
        localhost = {
            NSExceptionAllowsInsecureHTTPLoads = YES;
            NSExceptionMinimumTLSVersion = 1.0;
        };
    };
}

// TestFlight and Distribution Settings
VALIDATE_PRODUCT = YES
COPY_PHASE_STRIP = YES
DEBUG_INFORMATION_FORMAT = dwarf-with-dsym
STRIP_INSTALLED_PRODUCT = YES

// Performance Optimizations
SWIFT_OPTIMIZATION_LEVEL = -O
GCC_OPTIMIZATION_LEVEL = s
SWIFT_COMPILATION_MODE = wholemodule

// Security Settings
ENABLE_STRICT_OBJC_MSGSEND = YES
CLANG_WARN_UNGUARDED_AVAILABILITY = YES_AGGRESSIVE
CLANG_WARN_SUSPICIOUS_MOVE = YES